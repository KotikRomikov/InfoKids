<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kirovsk.KirovskRelaxationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button149"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gamePlace"
                android:text="игровые центры/комнаты семейного отдыха" />

            <Button
                android:id="@+id/button150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sport"
                android:text="Спортивно-развлекательные" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>