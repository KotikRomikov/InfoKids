<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/MurmanskBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мурманск"
            android:onClick="MurmanskRazdel"/>

        <Button
            android:id="@+id/SeveromorskBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SeveromorskRazdel"
            android:text="Североморск" />

        <Button
            android:id="@+id/OlenegorskBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OlenegorskRazdel"
            android:text="Оленегорск" />

        <Button
            android:id="@+id/MonchegorskBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="MonchegorskRazdel"
            android:text="Мончегорск" />

        <Button
            android:id="@+id/ApatitiBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ApatitiRazdel"
            android:text="Апатиты" />

        <Button
            android:id="@+id/KirovskBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="KirovskRazdel"
            android:text="Кировск" />

        <Button
            android:id="@+id/ZoriBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ZoriRazdel"
            android:text="Полярные Зори" />

        <Button
            android:id="@+id/KandalakshaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="KandalakshaRazdel"
            android:text="Кандалакша" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>