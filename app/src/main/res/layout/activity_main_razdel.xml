<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainRazdelActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tvMed"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Медицина"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tvRelax"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Развлечения"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tvShop"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Магазины"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tvHobby"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Кружки и секции"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tvCelebration"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Всё для праздника"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tvFotoVideo"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Фото, видеооператоры "
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tvGarden"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:background="@drawable/selected"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Детские садики"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/testTextColor"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>