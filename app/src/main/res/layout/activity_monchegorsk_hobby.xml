<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".monchegorsk.MonchegorskHobbyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button94"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cipr"
                android:text="ЦИПР" />

            <Button
                android:id="@+id/button95"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="development_centre"
                android:text="Центры развития/ДК" />

            <Button
                android:id="@+id/button96"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="tutors"
                android:text="Репетиторы" />

            <Button
                android:id="@+id/button97"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sport"
                android:text="Спортивные секции" />

            <Button
                android:id="@+id/button98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="technical"
                android:text="Технические" />

            <Button
                android:id="@+id/button99"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="choreography"
                android:text="Хореография" />

            <Button
                android:id="@+id/button100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="music_vocal"
                android:text="Музыкальные/вокальные" />

            <Button
                android:id="@+id/button101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="languages"
                android:text="Языки" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>