<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kirovsk.KirovskMedicalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button147"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="doctors"
                android:text="врачи" />

            <Button
                android:id="@+id/button145"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="massage"
                android:text="массажисты" />

            <Button
                android:id="@+id/button146"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="logoped"
                android:text="логопеды" />

            <Button
                android:id="@+id/button148"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="hospital"
                android:text="Больницы" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>