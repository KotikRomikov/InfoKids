<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kandalaksha.KandalakshaCelebrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button105"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cakes"
                android:text="торты" />

            <Button
                android:id="@+id/button102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="balls"
                android:text="шары" />

            <Button
                android:id="@+id/button103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="animator"
                android:text="аниматоры" />

            <Button
                android:id="@+id/button104"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="other"
                android:text="прочее" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>