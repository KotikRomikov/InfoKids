<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kirovsk.KirovskShopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button153"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="productForKids"
                android:text="товары для детей" />

            <Button
                android:id="@+id/button151"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="shoes"
                android:text="обувь" />

            <Button
                android:id="@+id/button152"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="handMade"
                android:text="ручная работа" />

            <Button
                android:id="@+id/button154"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="toys"
                android:text="игрушки" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>