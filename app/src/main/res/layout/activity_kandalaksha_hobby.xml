<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kandalaksha.KandalakshaHobbyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button118"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cipr"
                android:text="ЦИПР" />

            <Button
                android:id="@+id/button119"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="development_centre"
                android:text="Центры развития/ДК" />

            <Button
                android:id="@+id/button120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sport_section"
                android:text="Спортивные секции" />

            <Button
                android:id="@+id/button121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="choreography"
                android:text="Хореография" />

            <Button
                android:id="@+id/button122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="music_vocal"
                android:text="Музыкальные/вокальные" />

            <Button
                android:id="@+id/button123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="art_work"
                android:text="Художественные" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>