<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".olenegorsk.OlenegorskHobbyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/cipr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apatiti_hobby_cipr" />

            <Button
                android:id="@+id/center_of_development"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/development_centre" />

            <Button
                android:id="@+id/choreography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choreography" />

            <Button
                android:id="@+id/sport_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sport_section" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>