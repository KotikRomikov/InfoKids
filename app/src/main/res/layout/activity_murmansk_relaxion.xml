<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".murmansk.MurmanskRelaxionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/gamePlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_centre" />

            <Button
                android:id="@+id/quest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quest" />

            <Button
                android:id="@+id/sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sport_relaxation" />

            <Button
                android:id="@+id/antiKafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anti_cafe" />

            <Button
                android:id="@+id/intellectGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intellect_game" />

            <Button
                android:id="@+id/kidsOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kids_organization" />

            <Button
                android:id="@+id/zoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zoo" />

            <Button
                android:id="@+id/culture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/culture" />

            <Button
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>