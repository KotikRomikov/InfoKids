<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".monchegorsk.MonchegorskRelaxationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/sport_relaxion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sport_relaxation" />

            <Button
                android:id="@+id/game_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_centre" />

            <Button
                android:id="@+id/relaxation_cafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cafe_plus" />

            <Button
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>