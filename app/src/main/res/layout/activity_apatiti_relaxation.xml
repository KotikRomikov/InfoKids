<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apatiti.ApatitiRelaxationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button174"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gameCentre"
                android:text="игровые центры/комнаты семейного отдыха" />

            <Button
                android:id="@+id/button175"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sport"
                android:text="Спортивно-развлекательные" />

            <Button
                android:id="@+id/button176"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cafe"
                android:text="Кафе с/рядом игровыми комнатами" />

            <Button
                android:id="@+id/button177"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="kidsOrganization"
                android:text="Молодёжные организации" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>